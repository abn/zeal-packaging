{
  "app-id": "org.zealdocs.Zeal",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.10",
  "sdk": "org.kde.Sdk",
  "command": "zeal",
  "rename-desktop-file": "zeal.desktop",
  "rename-icon": "zeal",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--share=network",
    "--socket=wayland",
    "--filesystem=host",
    "--device=dri"
  ],
  "cleanup": [
    "/include",
    "/lib/cmake",
    "/mkspecs"
  ],
  "modules": [
    "qtwebkit.json",
    {
      "name": "zeal",
      "config-opts": [
        "-DENABLE_TESTING=OFF",
        "-DCMAKE_INSTALL_LIBDIR=lib",
        "-DQt5WebKit_DIR=/app/lib/cmake/Qt5WebKit/",
        "-DQt5WebKitWidgets_DIR=/app/lib/cmake/Qt5WebKitWidgets/"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/zealdocs/zeal.git",
          "tag": "v0.6.0"
        }
      ],
      "buildsystem": "cmake"
    }
  ]
}
